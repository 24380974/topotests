graph template {
	label="template";

	# Routers
	r1 [
		shape=octagon,
		label="r1",
	];
	r2 [
		shape=octagon
		label="r2",
	];

	# Switches
	s1 [
		shape=box,
		label="s1\n192.168.0.0/24",
	];
	s2 [
		shape=box,
		label="s2\n192.168.1.0/24",
	];

	# Connections
	r1 -- s1 [label="eth0\n.1"];

	r1 -- s2 [label="eth1\n.100"];
	r2 -- s2 [label="eth0\n.1"];
}
